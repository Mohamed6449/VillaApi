
@model IEnumerable<DtoVillaNumberGet>
<br />
<div class="container p-4 border">

	<div class="row pb-2">

		<div class="col">
			<h1 class="text-primary">Villa List</h1>
		</div>
		<div class="col text-end pt-1">
			<a asp-action="CreateVillaNumber" class="btn btn-outline-primary"><i class="bi bi-plus-square-fill"></i>  Create new Villa number</a>

		</div>
	</div>
	<table class="table">
		<thead>
			<tr>
				<th>
					Name
				</th>
				<th>
					Villa number 
				</th>

				<th></th>

			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{

				<tr>
					<td>
						@item.dtoVillaGet.Name
					</td>
					<td>
						@item.VillaNumberId
					</td>

					<td>
						<a asp-action="UpdateVillaNumber" asp-route-Id="@item.VillaNumberId" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
						<a asp-action="DeleteVillaNumber" asp-route-Id="@item.VillaNumberId" class="btn btn-danger"><i class="bi bi-trash"></i></a>
					</td>
				</tr>


			}

		</tbody>







	</table>














</div>