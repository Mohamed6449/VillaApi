@model DtoVillaNumberCreate

<form asp-action="CreateVillaNumber">
	<br />
	<div class="container border p-3">
		<h1 class="text-primary">Create Villa Number</h1>
		<hr />
		@Html.AntiForgeryToken()
		<div class="row">

			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="col-2">
				<label  class="control-label pt-2" style="font-size:20px;">Villa Number Id</label>
			</div>
			<div class="col-10 pb-3" >
				<input class="form-control" asp-for="VillaNumberId" />
				<span asp-validation-for="VillaNumberId" class="text-danger"></span>
			</div>

			<div class="col-2">
				<label  class="control-label pt-2" style="font-size:20px;">Spitial Details</label>
			</div>
			<div class="col-10 pb-3">
				<input class="form-control" asp-for="SpitialDetails" />
				<span asp-validation-for="SpitialDetails" class="text-danger"></span>
			</div>


			<div class="col-2">
				<label asp-for="VillaId" class="control-label pt-2" style="font-size:20px;"></label>
			</div>
			<div class="col-10 pb-3">
				<select asp-items="@ViewBag.VillaName" class="form-control" rows="5" asp-for="VillaId"></select>
				<span asp-validation-for="VillaId" class="text-danger"></span>
			</div>


			<div class="col-5 offset-2">
				<a asp-action="Index" class="btn btn-primary form-control">Back To List</a>
			</div>
			<div class="col-5">
				<input type="submit" value="Create" class="btn btn-success form-control" />
			</div>
		</div>

	</div>
</form>
@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}